<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Controls (top) -->
    <ScrollView
        android:id="@+id/controls_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/controls_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Power / Calibrate -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/buttonShutdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shutdown" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="1dp" />

                <Button
                    android:id="@+id/buttonCalibrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calibrate" />
            </LinearLayout>

            <!-- IP entry -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ipInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxBackgroundMode="outline"
                app:prefixText="Set IP Address: ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ipAddressInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g. 192.168.4.1"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal|number"
                    android:digits="0123456789."
                    android:contentDescription="IP address input" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Connect / Disconnect -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/setIpButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Connect" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="1dp" />

                <Button
                    android:id="@+id/buttonDisconnect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Disconnect" />
            </LinearLayout>

            <!-- Connection indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <View
                    android:id="@+id/piConnectionDot"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/circle_grey"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/piConnectionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: Unknown"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/lastPiButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSI Button Pressed: --"
                android:textSize="18sp"
                android:layout_marginBottom="20dp" />

            <!-- AMSI -->
            <Button
                android:id="@+id/buttonStartAmsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start AMSI"
                android:layout_marginBottom="12dp" />

            <!-- Live preview -->
            <Switch
                android:id="@+id/switch_camera_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camera Preview"
                android:textOn="Camera Preview ON"
                android:textOff="Camera Preview OFF"
                android:layout_marginBottom="16dp" />

            <!-- AMSI progress -->
            <ProgressBar
                android:id="@+id/captureProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="16"
                android:visibility="gone" />

            <TextView
                android:id="@+id/captureProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:layout_marginBottom="20dp" />

            <!-- Calibration progress -->
            <ProgressBar
                android:id="@+id/calProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="16"
                android:visibility="gone" />

            <TextView
                android:id="@+id/calProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone" />

            <!-- PMFI (INI-only) -->
            <TextView
                android:id="@+id/pmfiHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PMFI (INI only)"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="6dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pmfiIniLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxBackgroundMode="outline"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pmfiIniEdit"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:gravity="top|start"
                    android:hint="Paste your [pmfi] INI here"
                    android:inputType="textMultiLine"
                    android:overScrollMode="always"
                    android:scrollbars="vertical" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/pmfiUploadIniBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Upload INI" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="1dp" />

                <Button
                    android:id="@+id/pmfiStartBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start PMFI"
                    android:enabled="false" />
            </LinearLayout>

            <!-- PMFI status strip (GLOBAL progress) -->
            <LinearLayout
                android:id="@+id/pmfi_status_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/pmfiSectionLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PMFI idle"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pmfiStageLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

                <ProgressBar
                    android:id="@+id/pmfiProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:max="100"
                    android:progress="0"
                    android:indeterminate="false" />

                <!-- SINGLE total line with percentage -->
                <TextView
                    android:id="@+id/pmfiCounter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 / 0 (0%)"
                    android:gravity="end"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- PMFI Section Card (PER-SECTION progress) -->
            <LinearLayout
                android:id="@+id/pmfi_section_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <!-- Only the sections count (removed 'Section: –') -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSectionsCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Sections: 0/0" />
                </LinearLayout>

                <!-- Human-readable meaning -->
                <TextView
                    android:id="@+id/tvSectionInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:textSize="12sp"
                    android:alpha="0.8"
                    android:layout_marginTop="2dp" />

                <!-- Per-section progress -->
                <ProgressBar
                    android:id="@+id/pbSection"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:max="100"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvSectionFrames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0/0 (0%) in this section"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Optional: mini console for pmfi.log -->
            <ScrollView
                android:id="@+id/pmfiLogContainer"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:fillViewport="true"
                android:visibility="gone">

                <TextView
                    android:id="@+id/pmfiLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="true"
                    android:textSize="12sp"
                    android:typeface="monospace"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />
            </ScrollView>

            <!-- Legacy status text (hidden) -->
            <TextView
                android:id="@+id/pmfiStatusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingTop="6dp"
                android:textIsSelectable="true"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <!-- Preview (bottom) -->
    <ScrollView
        android:id="@+id/preview_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingBottom="72dp"
        android:clipToPadding="false"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/preview_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black" />
    </ScrollView>

</LinearLayout>
